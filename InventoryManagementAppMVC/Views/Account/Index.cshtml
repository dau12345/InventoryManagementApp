@model ResponsePagination

<h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Tables /</span> Basic Tables</h4>

<!-- Striped Rows -->
<h5 class="fw-bold"><span class="text-muted fw-light">Staff /</span> Basic Tables</h5>

<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">

                @{
                    int i = 1;
                    foreach (var item in Model.Entities)
                    {
                        AppUserVM user = item as AppUserVM;

                        <tr>
                            <td>i</td>
                            <td>@user.FirstName</td>
                            <td>@user.LastName</td>
                            <td>@user.PhoneNumber</td>
                            <td>@user.Email</td>
                            <td>@user.Role</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        i++;
                    }
                }
            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="pt-3">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @for (int j = Model.Pages - 3 * Model.CurrentPage + 1; j < 5 + j; j++)
                {
                    if (j == Model.CurrentPage)
                    {
                        <li class="page-item"><a class="page-link active">@j</a></li>
                    }
                    <li class="page-item"><a class="page-link" asp-controller="Account" asp-action="Index" asp-route-id="j">@j</a></li>
                }
            </ul>
        </nav>
    </div>
</div>