@using System.Text.Json;
@using System.Text.Json.Serialization;
@model ResponsePagination

<!-- Striped Rows -->
<h5 class="fw-bold"><span class="text-muted fw-light">Truck /</span> Basic Tables</h5>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Model</th>
                    <th>License plate</th>
                    <th>Driver</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0 accordion" id="accordionExample">

                @{
                    int i = 1;
                    foreach (JsonElement item in Model.Entities)
                    {
                        TruckVM user = JsonSerializer.Deserialize<TruckVM>(item, new JsonSerializerOptions
                        {
                            PropertyNameCaseInsensitive = true,
                            DefaultIgnoreCondition = JsonIgnoreCondition.WhenWritingNull
                        });

                        <tr class="accordion-item" data-bs-toggle="collapse" data-bs-target="#usagedetail-@i" aria-expanded="false" aria-controls="usagedetail-@i">
                            <td>@i</td>
                            <td>@user.Model</td>
                            <td>@user.LicensePlate</td>
                            <td>-</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-edit-alt me-1"></i> Edit</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-trash me-1"></i> Delete</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="5">
                                <div id="usagedetail-@i" class="accordion-collapse collapse"
                                     data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <div class="row"></div>

                                        //Toolbox
                                        <div class="col-md-6">
                                            <span class="text-muted fw-light">Toolbox #@user.ToolboxID</span>
                                            <div class="card">
                                                <div class="table-responsive text-nowrap">
                                                    <table class="table table-primary">
                                                        <thead>
                                                            <tr>
                                                                <th></th>
                                                                <th>Equipment</th>
                                                                <th>Quantity In Toolbox</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody class="table-border-bottom-0">

                                                            @{
                                                                int j = 1;
                                                                @foreach (var detail in user.Toolbox.ToolboxEquipments)
                                                                {
                                                                    <tr>
                                                                        <td>@j</td>
                                                                        <td>@detail.Equipment.Name</td>
                                                                        <td>@detail.QuantityInToolbox</td>
                                                                    </tr>
                                                                    j++;
                                                                }
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>

                                        //TruckStockItem

                                        <div class="col-md-6">
                                            <span class="text-muted fw-light">Stock Item #</span>
                                            <div class="card">
                                                <div class="table-responsive text-nowrap">
                                                    <table class="table table-primary">
                                                        <thead>
                                                            <tr>
                                                                <th></th>
                                                                <th>Stock Item</th>
                                                                <th>Quantity In Truck</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody class="table-border-bottom-0">

                                                            @{
                                                                int k = 1;
                                                                @foreach (var detail in user.TruckStockItems)
                                                                {
                                                                    <tr>
                                                                        <td>@k</td>
                                                                        <td>@detail.StockItem.Name</td>
                                                                        <td>@detail.QuantityInTruck</td>
                                                                    </tr>
                                                                    k++;
                                                                }
                                                            }

                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>

                        i++;
                    }
                }

            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="demo-inline-spacing">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @{
                    int start = 1;
                    int max = Model.Pages;

                    if (Model.CurrentPage == 1)
                    {
                        start = 1;
                    }
                    else if (Model.Pages - Model.CurrentPage < 4 && Model.CurrentPage > 5)
                    {
                        start = Model.Pages - 4;
                    }

                    if (Model.Pages > 5)
                    {
                        max = start + 4;
                    }

                    for (int j = start; j < max + 1; j++)
                    {
                        if (j == Model.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link">@j</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" asp-controller="Truck" asp-action="Index" asp-route-page="@j">@j</a></li>
                        }
                    }
                }
            </ul>
        </nav>
    </div>
</div>
<!--/ Striped Rows -->