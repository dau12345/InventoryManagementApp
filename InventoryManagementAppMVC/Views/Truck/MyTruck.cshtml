@model TruckVM

<partial name="_Message" />

<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="fw-bold">My Truck</h5>
</div>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>Model</th>
                    <th>License plate</th>
                    <th>Driver Name</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0 accordion" id="accordionExample">
                @{
                    int i = 1;
                }
                <tr class="accordion-item">
                    <td>@i</td>
                    <td>@Model.Model</td>
                    <td>@Model.LicensePlate</td>

                    @{
                        if (Model.AppUser != null)
                        {
                            <td>@Model.AppUser.FirstName @Model.AppUser.LastName</td>
                        }
                        else
                        {
                            <td>-</td>
                        }
                    }
                    <td data-bs-toggle="collapse" data-bs-target="#usagedetail-@i" aria-expanded="false" aria-controls="usagedetail-@i"><i class="bx bx-expand-alt bx-burst"></i></td>
                </tr>
                <tr>
                    <td colspan="6">
                        <div id="usagedetail-@i" class="accordion-collapse collapse"
                             data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <div class="row">

                                    <!-- Toolbox -->
                                    <div class="col-md-6">
                                        <span class="text-muted fw-light">Toolbox #@Model.ToolboxID</span>
                                        <div class="card">
                                            <div class="table-responsive text-nowrap">
                                                <table class="table table-primary">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>Equipment</th>
                                                            <th>Quantity In Toolbox</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="table-border-bottom-0">

                                                        @{
                                                            int j = 1;
                                                            @foreach (var detail in Model.Toolbox.ToolboxEquipments)
                                                            {
                                                                <tr>
                                                                    <td>@j</td>
                                                                    <td>@detail.Equipment.Name</td>
                                                                    <td>@detail.QuantityInToolbox</td>
                                                                </tr>
                                                                j++;
                                                            }
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- TruckStockItem -->

                                    <div class="col-md-6">
                                        <span class="text-muted fw-light">Stock Item</span>
                                        <div class="card">
                                            <div class="table-responsive text-nowrap">
                                                <table class="table table-primary">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>Stock Item</th>
                                                            <th>Quantity In Truck</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="table-border-bottom-0">

                                                        @{
                                                            int k = 1;
                                                            @foreach (var detail in Model.TruckStockItems)
                                                            {
                                                                <tr>
                                                                    <td>@k</td>
                                                                    <td>@detail.StockItem.Name</td>
                                                                    <td>@detail.QuantityInTruck</td>
                                                                </tr>
                                                                k++;
                                                            }
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </td>
                </tr>

            </tbody>
        </table>
    </div>
</div>