@using System.Text.Json;
@using System.Text.Json.Serialization;
@model ResponsePagination

@if (TempData["Success"] != null)
{
<div class="alert alert-success alert-dismissible" role="alert">
    <span>@TempData["Success"]</span>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close">
    </button>
</div>
}

<!-- Striped Rows -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <h5 class="fw-bold">Restock Log</h5>
    <form asp-controller="RestockLog" asp-action="Create">
        <button type="submit" class="btn btn-primary">Create</button>
    </form>
</div>
<div class="card">
    <div class="table-responsive text-nowrap">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th></th>
                    <th>log id</th>
                    <th>Request Date</th>
                    <th>Request State</th>
                    <th>Restock Date</th>
                    <th>Restock State</th>
                    <th>License Plate</th>
                    <th>Driver</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0 accordion" id="accordionExample">

                @{
                    int i = 1;
                    foreach (JsonElement item in Model.Entities)
                    {
                        RestockLogVM restock = JsonSerializer.Deserialize<RestockLogVM>(item, new JsonSerializerOptions
                        {
                            PropertyNameCaseInsensitive = true,
                            DefaultIgnoreCondition = JsonIgnoreCondition.WhenWritingNull
                        });
                        
                        <tr class="accordion-item" data-bs-toggle="collapse" data-bs-target="#restockdetail-@i" aria-expanded="false" aria-controls="restockdetail-@i">
                            <td>@i</td>
                            <td>@restock.RestockLogID</td>
                            <td>@restock.RequestDate</td>
                            <td><span class="badge bg-label-info me-1">@restock.LogState</span></td>
                            <td>@restock.RestockDate</td>
                            <td><span class="badge bg-label-success me-1">@restock.RestockState</span></td>
                            <td>@restock.LicensePlate</td>
                            <td>@restock.AppUserName</td>
                            <td>
                                <div class="dropdown">
                                    <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                        <i class="bx bx-dots-vertical-rounded"></i>
                                    </button>
                                    <div class="dropdown-menu">
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-check-circle me-1"></i> Accept</a>
                                        <a class="dropdown-item" href="javascript:void(0);"><i class="bx bx-x-circle me-1"></i> Reject</a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="9">
                                <div id="restockdetail-@i" class="accordion-collapse collapse"
                                     data-bs-parent="#accordionExample">
                                    <div class="accordion-body">
                                        <div class="card">
                                            <div class="table-responsive text-nowrap">
                                                <table class="table table-primary">
                                                    <thead>
                                                        <tr>
                                                            <th></th>
                                                            <th>StockItem</th>
                                                            <th>Quantity</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody class="table-border-bottom-0">

                                                        @{
                                                            int j = 1;
                                                            @foreach (var detail in restock.DetailRestockLogs)
                                                            {
                                                                <tr>
                                                                    <td>@j</td>
                                                                    <td>@detail.StockItemName</td>
                                                                    <td>@detail.Quantity</td>
                                                                </tr>
                                                                j++;
                                                            }
                                                        }

                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                        i++;
                    }
                }

            </tbody>
        </table>
    </div>

    <!-- Pagination -->
    <div class="demo-inline-spacing">
        <nav aria-label="Page navigation">
            <ul class="pagination justify-content-center">
                @{
                    int start = 1;
                    int max = Model.Pages;

                    if (Model.CurrentPage == 1)
                    {
                        start = 1;
                    }
                    else if (Model.Pages - Model.CurrentPage < 4 && Model.CurrentPage > 5)
                    {
                        start = Model.Pages - 4;
                    }

                    if (Model.Pages > 5)
                    {
                        max = start + 4;
                    }

                    for (int j = start; j < max + 1; j++)
                    {
                        if (j == Model.CurrentPage)
                        {
                            <li class="page-item active">
                                <a class="page-link">@j</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" asp-controller="RestockLog" asp-action="Index" asp-route-page="@j">@j</a></li>
                        }
                    }
                }
            </ul>
        </nav>
    </div>
</div>
<!--/ Striped Rows -->