@model EquipmentVM

<partial name="_Message" />

<div class="col-xl">
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Update equipment</h5>
        </div>
        <div class="card-body">
            <form asp-controller="Equipment" asp-action="Update">
                <input type="hidden" asp-for="EquipmentID" />
                <input type="hidden" asp-for="isDeleted" />
                <input type="hidden" asp-for="CompanyID" />
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input asp-for="Name" type="text" class="form-control" placeholder="Drill">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="basic-default-company">Type</label>
                    <select asp-for="Type" asp-items="@Html.GetEnumSelectList<EquipmentType>()" class="form-control form-control-lg">
                        <option>--Select--</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label">Quantity</label>
                    <input asp-for="Quantity" type="number" min="1"  class="form-control">
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div>
    </div>
</div>
